// get rid of system borders being generated for A tags

a:active
  outline: none

\:focus
  -moz-outline-style: none

// root element for the scrollable.
// when scrolling occurs this element stays still.

.scrollable
  position: relative
  float: left
  overflow: hidden
  width: 530px
  height: 116px
  margin: 0 0 0 4px
  &.noscroll
    margin: 0 0 0 25px
  .items
    width: 20000em
    position: absolute
    clear: both

// position container to the right to make up for no left or right arrow

// root element for scrollable items. Must be absolutely positioned
 // and it should have an extremely large width to accomodate scrollable items.
 // it's enough that you set the width and height for the root element and
 // not for this element.

.items .group
  float: left
  width: 535px
  cursor: pointer
  a span
    margin: 2px 0 0 0
    display: block
    font-size: 11px
    line-height: 11px
    color: #414042
    text-align: center

// single scrollable item
.scrollable .img
  position: relative
  display: inline-block
  float: left
  margin: 10px 10px 10px 0
  padding: 0
  border: 1px solid #afafae
  width: 95px
  height: 95px
  filter: alpha(opacity=50)
  -moz-opacity: .50
  -khtml-opacity: .50
  -webkit-opacity: .50
  opacity: .50
  &:hover
    filter: alpha(opacity=100)
    -moz-opacity: 1
    -khtml-opacity: 1
    -webkit-opacity: 1
    opacity: 1
    .thumbLabel
      filter: alpha(opacity=100)
      -moz-opacity: 1
      -khtml-opacity: 1
      -webkit-opacity: 1
      opacity: 1

.items img
  border: none
  width: 95px
  height: 95px

// prev and next buttons

a
  &.prev
    clear: both
    width: 22px
    height: 63px
    float: left
    margin: 28px 0px 0
    cursor: pointer
  &.next
    width: 22px
    height: 63px
    float: left
    margin: 28px 0px 0
    cursor: pointer
    background-image: url(<%= asset_path 'next.gif' %>)
    &:hover
      background-image: url(<%= asset_path 'nextO.gif' %>)
  &.prev
    background-image: url(<%= asset_path 'prev.gif' %>)
    &:hover
      background-image: url(<%= asset_path 'prevO.gif' %>)
  &.disabled
    visibility: hidden !important

