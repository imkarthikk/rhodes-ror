= render 'form'
%h1
  Materials Index
%ul
  - @materials.each do |material| 
    %li
      = link_to  material.title, admin_material_path(material)
      = link_to 'Edit', edit_admin_material_path(material)
      = button_to 'Edit', edit_admin_material_path(material), :name => :edit
      = button_to 'Delete', admin_material_path(material), :method => :delete, :confirm => "Are you sure?"
      

