  .items

    = form_for @material, :remote => true, :url => admin_material_update_default_image_path(@material) do |f|
           
      - @material.images.each do |i|
      
        .img
          %img{src: i.image.url(:thumb), name: 'al', class: "material_thumb", id: "material_thumb_#{i.id}", :data => { large_image: "#{i.image.url(:large)}", image_id: "#{i.id}" }}
          
          // = link_to "X", :method => :delete, :confirm => "Are you sure?",  :url => admin_images_url(i), :class => ".close.close2", :data => { image_id: i.id }

          .finishesImg-wrap
            %select.finishesImg
              %option point stalk
              %option 4 point stalk
              %option fine adze
              %option coarse adze
              %option split
              %option pinapple
              %option honed
              %option bush hammered
              %option mechanical bush hammered
              %option antique
